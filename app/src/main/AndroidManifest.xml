<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kding.kdingcoinprepaid">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".v.activity.LoadingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".v.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".v.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.ChangePwdActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.RetrievePwdActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.ResetPwdActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.SelectOrgActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.SelectOrgListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.UnionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".v.activity.RechargeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.CarryOverActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.MDiscountActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.CashManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.CoinToCashActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.GamesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.TradeDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.CoinToCashRecordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.CTCRecordDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.UserInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".v.activity.BindPhoneActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>
