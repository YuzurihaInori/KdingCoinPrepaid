<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/colorBtnYellow"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/president_left_top"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/president_income_tip"
            android:layout_width="wrap_content"
            android:text="@string/union_income_num_tip"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextTitle"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/president_income_num"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/colorTextHeader"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tool:text="7000.00"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/president_right_top"
        android:layout_toRightOf="@+id/president_left_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="50%"
        android:gravity="center"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/president_all_income_tip"
            android:layout_width="wrap_content"
            android:text="@string/union_all_income_num_tip"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextTitle"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/president_all_income_num"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/colorTextHeader"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tool:text="10000.00"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/president_left_bottom"
        android:layout_below="@+id/president_left_top"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/president_coin_num_tip"
            android:layout_width="wrap_content"
            android:text="@string/union_coin_num_tip"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextTitle"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/president_coin_num"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/colorTextHeader"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tool:text="3000.00"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/president_right_bottom"
        android:layout_toRightOf="@+id/president_left_bottom"
        android:layout_below="@+id/president_right_top"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%">

        <TextView
            android:id="@+id/president_coin_to_cash_num_tip"
            android:layout_width="wrap_content"
            android:text="@string/union_coin_to_cash_num_tip"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextTitle"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/president_coin_to_cash_num"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_header"
            android:textColor="@color/colorTextHeader"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tool:text="9000.00"
            android:layout_height="wrap_content" />

    </LinearLayout>



</android.support.percent.PercentRelativeLayout>