<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_c_t_c_record_arrow">

        <TextView
            android:id="@+id/item_c_t_c_record_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="33%"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextContent"
            android:gravity="center"
            tool:text="匣币数量"/>

        <TextView
            android:id="@+id/item_c_t_c_record_mid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_c_t_c_record_left"
            app:layout_widthPercent="33%"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextContent"
            android:gravity="center"
            tool:text="账号"/>

        <TextView
            android:id="@+id/item_c_t_c_record_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_c_t_c_record_mid"
            android:textSize="@dimen/text_size_content"
            android:textColor="@color/colorTextContent"
            android:textStyle="bold"
            app:layout_widthPercent="33%"
            android:gravity="center"
            tool:text="时间"/>


    </android.support.percent.PercentRelativeLayout>

    <ImageButton
        android:id="@+id/item_c_t_c_record_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@mipmap/goto_other" />

</RelativeLayout>